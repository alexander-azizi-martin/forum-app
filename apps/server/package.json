{
  "name": "@forum-app/server",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist",
    "build": "ttsc",
    "dev": "tsc-watch --onSuccess \"cross-env NODE_ENV=development node --experimental-specifier-resolution=node -r dotenv/config dist\" --compiler ttypescript/bin/tsc",
    "test": "cross-env NODE_ENV=test jest --runInBand --passWithNoTests -o",
    "lint": "eslint --ext .ts .",
    "prepare": "prisma generate",
    "prisma:pull": "prisma db pull && yarn prepare"
  },
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@prisma/client": "^3.15.1",
    "fastify": "^4.0.2",
    "pino": "^8.0.0"
  },
  "devDependencies": {
    "@jest/types": "^28.1.1",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.1",
    "pino-pretty": "^8.0.0",
    "prisma": "^3.15.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "tsc-watch": "^5.0.3",
    "ttypescript": "^1.5.13",
    "typescript": "^4.7.3",
    "typescript-transform-paths": "^3.3.1"
  }
}
